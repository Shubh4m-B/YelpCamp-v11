<%- include("../partials/header.ejs"); %>

<div class="container" style="margin-top:40px;">
	<h1 style="text-align:center;">Create a new Camground</h1>
	<div style="width:40%; margin:20px auto;">
		
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input  class="form-control" type="text" placeholder="Name" name="name">				  
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Image url" name="image">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Add some description" name="description">
			</div>
			
			<div class="form-group">
				<button class="btn btn-success btn-lg btn-block">SUBMIT</button>
			</div>	
		</form>

		<a href="/campgrounds" class="btn btn-outline-light btn-block">BACK</a>

	</div>
</div>


