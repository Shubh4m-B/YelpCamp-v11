<%- include("../partials/header.ejs"); %>

<div class="container" style="margin-top:40px;">
	<h1 style="text-align:center;">Edit Comment</h1>
	<div style="width:40%; margin:20px auto;">
		
		<form action="/campgrounds/<%= camp_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input  class="form-control" type="text" value="<%=comment.text %>" name="comment[text]">				  
			</div>
			<div class="form-group">
				<button class="btn btn-success btn-lg btn-block">EDIT and SAVE</button>
			</div>	
		</form>

		<a href="/campgrounds/<%= camp_id %>" class="btn btn-outline-light btn-block">BACK</a>

	</div>
</div>


