<%- include("../partials/header.ejs"); %>

<div class="container" style="margin-top:40px;">
	<h1 style="text-align:center;">Add a new Comment to <%=camp.name%></h1>
	<div style="width:40%; margin:20px auto;">
		
		<form action="/campgrounds/<%=camp._id %>/comments" method="POST">
			<div class="form-group">
				<input  class="form-control" type="text" placeholder="Comment" name="comment[text]">				  
			</div>
			<div class="form-group">
				<button class="btn btn-success btn-lg btn-block">SUBMIT</button>
			</div>	
		</form>

		<a href="/campgrounds/<%= camp._id %>" class="btn btn-outline-light btn-block">BACK</a>

	</div>
</div>


